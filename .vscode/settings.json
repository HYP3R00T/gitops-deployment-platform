{
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": "./.github/instructions/commitMessageGeneration.instructions.md"
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "file": "./.github/instructions/pullRequestDescriptionGeneration.instructions.md"
    }
  ],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.rulers": [
      120
    ]
  },
  "css.lint.unknownAtRules": "ignore",
  "markdownlint.configFile": ".markdownlint.yaml",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.languageServer": "None",
  "ruff.interpreter": [
    "${workspaceFolder}/.venv/bin/python"
  ],
  "ruff.lint.enable": true,
  "ruff.nativeServer": true,
  "ruff.path": [
    "${workspaceFolder}/.venv/bin/ruff"
  ],
  "ty.path": [
    "${workspaceFolder}/.venv/bin/ty"
  ]
}
