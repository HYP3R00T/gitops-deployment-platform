---
import "@/styles/global.css";

const { title = "GitOps Deployment Platform" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="px-6 py-8 lg:py-12 bg-gray-50 min-h-screen flex flex-col items-center"
    >
      <div
        class="max-w-2xl w-2xl bg-white border border-gray-200 p-6 shadow-sm rounded flex flex-col items-center"
      >
        <h1 class="text-2xl font-semibold text-gray-900 mb-6">
          GitOps Deployment Platform
        </h1>
        <div class="flex gap-3 mt-6 flex-wrap">
          <a
            class="no-underline text-gray-900 border border-gray-900 px-3.5 py-2 transition-colors hover:bg-gray-900 hover:text-white"
            href="/">Home</a
          >
          <a
            class="no-underline text-gray-900 border border-gray-900 px-3.5 py-2 transition-colors hover:bg-gray-900 hover:text-white"
            href="/status">API Status</a
          >
          <a
            class="no-underline text-gray-900 border border-gray-900 px-3.5 py-2 transition-colors hover:bg-gray-900 hover:text-white"
            href="/info">Info</a
          >
        </div>
        <div class="pt-6 w-full">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
